<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".AboutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimaryText"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="@string/a_simple_darkest_dungeon_soundboard_application_for_android_the_application_looks_up_for_a_file_on_the_narrator_s_gamepedia_page_thanks_to_the_creators_and_maintainers_of_the_darkest_dungeon_gamepedia"
            android:textColor="@color/colorPrimaryText"
            android:textColorLink="@color/colorSecondaryText"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
